<%# Dashboard Metrics Component - Minimalistic React Implementation %>
<section class="metrics-section py-6">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% metrics_data = [
      { id: "views", title: "Average Views", value: number_with_delimiter(metrics[:average_views].round), description: "Average views per video" },
      { id: "growth", title: "Growth Rate", value: "#{metrics[:view_growth_rate]}%", description: "Channel growth over time" },
      { id: "engagement", title: "Engagement", value: "#{metrics[:engagement_rates][:overall]}%", description: "Overall engagement rate" }
    ] %>

    <% metrics_data.each do |metric| %>
      <div id="metric-<%= metric[:id] %>" 
           data-react-component="metrics-card"
           data-props="<%= metric.to_json %>">
      </div>
    <% end %>
  </div>
</section>