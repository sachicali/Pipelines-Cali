<%# Minimalistic Dashboard with React Integration %>
<div class="container mx-auto px-4 py-8">
  <div id="metrics-root" 
       data-metrics="<%= {
         metrics: [
           { id: 'views', title: 'Average Views', value: number_with_delimiter(@metrics_data[:average_views]), description: 'Average views per video' },
           { id: 'growth', title: 'Growth Rate', value: "#{@metrics_data[:view_growth_rate]}%", description: 'Channel growth over time' },
           { id: 'engagement', title: 'Engagement', value: "#{@metrics_data[:engagement_rate]}%", description: 'Overall engagement rate' }
         ]
       }.to_json %>">
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const root = document.getElementById('metrics-root');
  const data = JSON.parse(root.dataset.metrics);
  ReactDOM.createRoot(root).render(
    React.createElement(MetricsDisplay, data)
  );
});
</script>